# Server Configuration
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# API Configuration
API_BASE_URL=http://localhost:3000
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# AWS Configuration
AWS_REGION=us-east-1
DYNAMODB_TABLE_NAME=nps-app-table-dev
S3_BUCKET_NAME=nps-assets-dev
SQS_QUEUE_URL=

# Authentication
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=24h

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_TIME_WINDOW=1 minute

# Zendesk Integration
ZENDESK_API_TOKEN=your-zendesk-api-token
ZENDESK_SUBDOMAIN=your-subdomain
ZENDESK_BASE_URL=https://your-subdomain.zendesk.com/api/v2
ZENDESK_WEBHOOK_SECRET=your-webhook-secret

# Sunshine Conversations Integration
SUNCO_API_TOKEN=your-sunco-api-token
SUNCO_APP_ID=your-app-id
SUNCO_BASE_URL=https://api.smooch.io
SUNCO_WEBHOOK_SECRET=your-webhook-secret

# Logging
LOG_LEVEL=info
LOG_PRETTY=true
